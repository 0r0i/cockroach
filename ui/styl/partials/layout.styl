@require 'typography.styl'
@require '../modules/layout-vars.styl'
@require '../modules/palette.styl'

$topbar-border = $secondary-gray-1
$last-updated-color = $secondary-gray-2

*
  margin 0
  padding 0
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html
body
  height 100%

#root
  position relative
  padding-left $nav-width
  min-height calc(100% - 4rem)
  background-color -color('light', 'x-light')
  color -color('dark', 'light')

  &:after
    content ""
    display table
    clear both

.section.primary
  background-color white
  border-bottom 1px solid $topbar-border
  height $top-bar-height
  padding-top 0

  h2
    font-size 3.6rem
    font-family Lato-Medium
    color $main-navy
    line-height $top-bar-height
    padding-top 0
    margin-top 0
    display inline-block

  .last-updated
    display inline-block
    margin-left 25px
    line-height $top-bar-height
    vertical-align bottom
    font-size 1.1rem
    font-family Lato-Medium
    color $last-updated-color

    strong
      font-family Lato-Bold


.section
  padding 1rem 2rem

  &:after
    content ""
    display table
    clear both
