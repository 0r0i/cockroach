.dropdown
  text-transform uppercase
  letter-spacing 2px
  line-height 17px
  padding 1rem 2rem
  vertical-align middle
  border 1px solid rgba(0, 0, 0, .1)
  border-radius 4px
  display inline-flex
  white-space nowrap

  &__title
    vertical-align middle
    display inline-block

  &__select
    display inline-block
    vertical-align middle
    width 200px

  &__side-arrow
    font-family Lato-Bold
    display none
    color $secondary-blue-3
    cursor pointer
    &:first-child
      border-right 1px solid $grey-blue
      padding 1rem 20px
    &:last-child
      border-left 1px solid $grey-blue
      padding 1rem 20px
    &[disabled]
      background-color $lighter-gray
      cursor auto
      polyline
        stroke $light-gray
  &--side-arrows
    padding 0
    .dropdown__side-arrow
      display inline
